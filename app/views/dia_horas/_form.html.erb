<%= form_for(@dia_hora) do |f| %>
  <% if @dia_hora.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@dia_hora.errors.count, "error") %> prohibited this dia_hora from being saved:</h2>

      <ul>
      <% @dia_hora.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :dia %><br>
    <% days = ['Lunes', 'Martes', 'Miércoles', 'Jueves', 'Viernes', 'Sábado', 'Domingo'] %>
    <%= f.select :dia, [0,1,2,3,4,5,6].collect {|i| [days[i], i]} %>
  </div>
  <div class="field">
    <%= f.label :hora_inicio %><br>
    <%= f.time_select :hora_inicio %>
  </div>
  <div class="field">
    <%= f.label :hora_fin %><br>
    <%= f.time_select :hora_fin %>
  </div>
  <div class="field">
      <%= f.label :horario_id %>
      <%= f.number_field :horario_id, :value => @horario_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
