<html>
    <head>
      <title>Iniciar sesi&oacute;n</title>
    </head>
    <% if flash[:notice] %>
        <h2><%= flash[:notice] %></h2>
    <% end %>
    <body>
    <div id="containerLogin">
      <%= image_tag "logo.png", id: "loginLogo" %>
        <%= form_for :login, :url => {:action => 'do_login'}, method: :post, html: {class: "loginForm"} do |f| %>
            <%= f.label 'Matrícula', class: "form-group"%>
            <%= f.text_field :user_name, class: "form-control" %>
            <br>
            <%= f.label 'Contraseña', class: "form-group" %>
            <%= password_field_tag :password, nil, class: 'form-control' %>
            <br>
            <%= f.submit 'Iniciar sesión', class: "btn btn-default" %>
        <% end %>
    </div>
    </body>
</html>